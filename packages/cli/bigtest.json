{
  "app": {
    "command": "yarn bigtest-todomvc 36000",
    "url": "http://localhost:36000"
  },
  "testFiles": ["./test/fixtures/*.test.{ts,js}"],
  "launch": ["chrome.headless"],
  "coverage": {
    "directory": "./tmp/coverage",
    "reports": ["lcov", "html"]
  },
  "drivers": {
    "playwright": {
      "module": "@bigtest/playwright",
      "options": {
        "browser": "chromium",
        "headless": false
      }
    }
  }
}
