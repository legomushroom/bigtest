{
  "name": "bigtest-sample",
  "version": "0.0.0",
  "private": true,
  "description": "BigTest Sample App",
  "repository": "https://github.com/thefrontside/bigtest.git",
  "author": "Frontside Engineering <engineering@frontside.com>",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "start": "SKIP_PREFLIGHT_CHECK=true BROWSER=none react-scripts start",
    "test:jest": "SKIP_PREFLIGHT_CHECK=true react-scripts test --verbose ./test/jest.test.js",
    "cypress:run": "yarn cypress run --spec 'src/test/cypress.spec.js'",
    "test:cypress": "start-server-and-test start http://localhost:3000 cypress:run",
    "test:bigtest": "yarn bigtest ci"
  },
  "devDependencies": {
    "@testing-library/react": "^11.1.0",
    "bigtest": "^0.5.0",
    "cypress": "^6.0.1",
    "eslint-plugin-cypress": "^2.11.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.0",
    "start-server-and-test": "^1.11.6"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:cypress/recommended"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
